<%= form_for(@event) do |f| %>
  <div>
    <div><%= f.label :title %></div>
    <div><%= f.text_field :title %></div>
  </div>
  <div>
    <%= f.label :description, class:'label' %>
    <%= f.text_field :description, class:"field" %>
  </div>
  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
  <div>
    <%=f.label:date%>
    <%=f.date_field :date %>
  </div>
  <div>
    <%= submit_tag 'Create event' %>
  </div>
  <% end %>
